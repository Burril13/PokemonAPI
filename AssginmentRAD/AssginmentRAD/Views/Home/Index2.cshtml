@{
    ViewBag.Title = "Home Page";
}

<div>
    <h1>Pokemon Assginment</h1>

    <div class="glyphicon-align-center">
        <div>
            <h2>Pokemon</h2>
            <img id="imgPokemon" width="200" height="200" />
        </div>
        <div>
            <h3>Type</h3>
            <ul id="lstType" />
        </div>
        <div>
            <label>Pokemon Name</label>
            <input id="pokemonInput" height="10" width="50" placeholder="Pikachu" type="text" />
            <input type="button" class="btn btn-default" value="Get Type" onclick="getType();" />
        </div>
        <div class="row">
            <div class="col-md-4">
                <h3 class="list-group-item">Strong against</h3>
                <ul id="lstStrong" class="list-group-item" />
            </div>
            <div class="col-md-4">
                <h3 class="list-group-item">Weak against</h3>
                <ul class="list-group-item" id="lstWeak" />
            </div>
        </div>
    </div>
</div>